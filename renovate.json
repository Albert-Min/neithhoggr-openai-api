{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "fileMatch": [
    "^\\.nvmrc$"
  ],
  "automerge": true,
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps):",
  "prBodyTemplate": "This PR updates dependencies to their latest versions.",
  "timezone": "UTC",
  "packageRules": [
    {
      "packagePatterns": [
        "^@nestjs/"
      ],
      "enabledManagers": [
        "npm"
      ],
      "prBodyTemplate": "This PR updates Nest.js dependencies to their latest versions."
    }
  ],
  "dependencyDashboard": true
}
