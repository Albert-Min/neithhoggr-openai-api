{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    ':prHourlyLimit4',
    ':disableDependencyDashboard',
    ':rebaseStalePrs',
    ':maintainLockFilesWeekly',
    ':semanticCommits',
    ':semanticCommitScope(deps)',
    'docker:enableMajor',
    'docker:pinDigests',
    'group:linters',
    ':pinVersions',
    'helpers:pinGitHubActionDigests',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  labels: ['‚úÖ Renovate'],
  gitAuthor: 'Renovate Bot <bot@renovateapp.com>',
  vulnerabilityAlerts: {
    labels: ['‚úÖ Renovate', 'üîê Security'],
    automerge: true,
  },
  timezone: 'UTC',
  schedule: [
    'after 1am every weekday',
    'before 3pm every weekday',
    'every weekend',
  ],
  automergeSchedule: [
    'after 1am every weekday',
    'before 3pm every weekday',
    'every weekend',
  ],
  platformAutomerge: true,
  packageRules: [
    {
      description: 'Automerge non-major updates',
      matchUpdateTypes: ['minor', 'patch', 'digest', 'lockFileMaintenance'],
      automerge: true,
    },
    {
      matchPackagePrefixes: ['@nestjs/'],
      groupName: '@nestjs dependencies',
    },
    {
      matchDepTypes: ['devDependencies'],
      labels: ['‚úÖ Renovate', 'üõ† Dev'],
    },
    {
      description: 'Group prettier packages',
      matchPackageNames: ['prettier'],
      matchPackagePatterns: ['^@prettier/', '^prettier-plugin-'],
      groupName: 'prettier packages',
    },
    {
      matchManagers: ['npm'],
      matchPackageNames: ['@types/node'],
      matchUpdateTypes: ['major'],

      enabled: false,
    },
    {
      matchManagers: ['npm'],
      matchPackagePatterns: ['^@types/'],
      matchUpdateTypes: ['major', 'minor', 'patch'],

      automerge: true,
      commitMessageExtra: '',
      groupName: 'npm definitely typed',
      prPriority: 99,
      recreateClosed: true,
      schedule: 'before 9:00 am on Tuesday',
    },
    {
      matchPackageNames: ['node', 'docker.io/node', '@types/node'],
      allowedVersions: '/^[1-9]*[02468]\\..*/',
    },
    {
      matchUpdateTypes: ['lockFileMaintenance'],

      automerge: true,
      prPriority: 99,
      schedule: 'before 9:00 am every 2 weeks on Wednesday',
    },
    {
      matchUpdateTypes: ['pin'],

      automerge: true,
      prPriority: 99,
      schedule: 'before 9:00 am every weekday',
    },
  ],
}
